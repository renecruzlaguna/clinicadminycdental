{% extends 'base.html.twig' %}
{% block css %}
    {{ parent() }}
    <link href="{{ asset('bundles/app/css/plugins/chosen/bootstrap-chosen.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/app/css/plugins/datapicker/datepicker3.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/app/css/plugins/steps/jquery.steps.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/app/css/plugins/iCheck/custom.css') }}" rel="stylesheet">

{% endblock %}
{% block content %}
    <h3>Registrar historia clínica</h3>
    <div class="panel  panel-primary"></div>
    <form id="form" action="#" class="wizard-big" method="post" action="{{ path('manage_query_result_doctor_add',{id:query.id}) }}">
        <h1>Datos del paciente</h1>
        <input  name="areas" id="areas" type="hidden" value="">
        <input  name="tto" id="ttosend" type="hidden" value="0">
        <input  name="cliente" type="hidden" value="{{ query.usuarioRegistro.id }}">
        <input  name="consulta" type="hidden" value="{{ query.id }}">
        <fieldset>
            <h2>Datos del paciente</h2>
            <div class="panel  panel-primary"></div>
            <div class="row">
                <div class="col-lg-10">
                    <div class="form-group">
                        <div class="col-lg-offset-5">
                            <label>NOMBRE DEL PACIENTE:</label>
                        </div>
                        <input disabled="disabled" type="text" class="form-control required"
                               value="{{ query.usuarioRegistro.getCompleteName() }}">
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="form-horizontal">


                    <div class="col-lg-5">
                        <div class="form-group">

                            <label class="control-label col-lg-2" for="ci">CI:</label>
                            <div class="col-lg-10">
                                <input value="{{ query.usuarioRegistro.cedula }}" aria-describedby="ci"
                                       disabled="disabled" type="text" class="form-control">

                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div class="form-group">

                            <label class="control-label col-lg-4" for="fecha">FECHA:</label>
                            <div class="col-lg-8">
                                <input disabled="disabled"  aria-describedby="fecha"
                                       type="text" class="form-control" value="{{ "now"|date("m/d/Y") }}">

                            </div>
                        </div>
                    </div>



                </div>
                </div>






            <div class="col-lg-4">
                <div class="text-center">
                    <div style="margin-top: 20px">
                        <i class="fa fa-sign-in" style="font-size: 180px;color: #e5e5e5 "></i>
                    </div>
                </div>
            </div>


        </fieldset>
        <h1>Datos de la consulta</h1>
        <fieldset>
            <h2>Datos de la consulta</h2>
            <div class="panel  panel-primary"></div>
            <div class="row">
                <div class="col-lg-10">
                    <div class="form-group">
                        <div class="col-lg-offset-5">
                            <label>MOTIVO:</label>
                        </div>
                        <textarea name="motivo" rows="5" cols="5" type="text" class="form-control required"
                        ></textarea>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="form-horizontal">


                    <div class="col-lg-5">
                        <div class="form-group">

                            <label class="control-label col-lg-10" for="ci">HA TENIDO TTO ORTODONCIA:</label>
                            <div class="col-lg-2">
                                <div class="i-checks"><label> <input type="checkbox"  id="tto" value="0"> <i></i>  </label></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div class="form-group">

                            <label class="control-label col-lg-4" for="telefono">TIEMPO:</label>
                            <div class="col-lg-8">
                                <input name="tiempo" id="tiempo"   name="tiempo" disabled="disabled" value="0" aria-describedby="telefono"
                                        type="text" class="form-control">

                            </div>
                        </div>
                    </div>



                </div>
            </div>



            <div class="row">
                <div class="col-lg-10">
                    <div class="form-group">
                        <div class="col-lg-offset-5">
                            <label>A.P.P:</label>
                        </div>
                        <textarea  name="appp" rows="5" cols="5" type="text" class="form-control required"
                        ></textarea>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-10">
                    <div class="form-group">
                        <div class="col-lg-offset-5">
                            <label>A.P.F:</label>
                        </div>
                        <textarea  name="apf"  rows="5" cols="5" type="text" class="form-control required"
                        ></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-10">
                    <div class="form-group">
                        <div class="col-lg-offset-5">
                            <label>REACCION A MEDICAMENTOS:</label>
                        </div>
                        <textarea  name="reaccionMedicamento" rows="5" cols="5" type="text" class="form-control required"
                        ></textarea>
                    </div>
                </div>
            </div>
        </fieldset>







        <h1>Antecedentes</h1>
