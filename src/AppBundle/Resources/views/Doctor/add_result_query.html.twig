            <h1>Examen bucal II</h1>
            <fieldset>


                <h2>Examen bucal II</h2>
                <div class="panel  panel-primary"></div>
            <div class="row">
                <div class="col-lg-10">
                    <div class="form-group">
                        <div class="col-lg-offset-5">
                            <label>PALADAR DURO Y BLANDO:</label>
                        </div>
                        <textarea   name="paladarDuro"  rows="3" cols="5" type="text" class="form-control required"
