                        </div>
                        <textarea name="relacionCanino"  rows="3" cols="5" type="text" class="form-control required"
                        ></textarea>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-10">
                    <div class="form-group">
                        <div class="col-lg-offset-5">
                            <label>RESALTE:</label>
                        </div>
                        <textarea   name="resalte"  rows="3" cols="5" type="text" class="form-control required"
                        ></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-10">
                    <div class="form-group">
                        <div class="col-lg-offset-5">
                            <label>SOBREPASE:</label>
                        </div>
                        <textarea  name="sobrepase" rows="3" cols="5" type="text" class="form-control required"
                        ></textarea>
                    </div>
                </div>
            </div>



        </fieldset>
        <h1>Evoluciones registradas</h1>
        <fieldset>
            <h2>Evoluciones registradas</h2>
            <div class="panel  panel-primary"></div>
            <div class="row">
                <div class="col-lg-10">
                    <div class="form-group">
                        <div class="col-lg-offset-5">
                            <label>OBSERVACIONES:</label>
                        </div>
                        <textarea  name="observaciones" rows="3" cols="5" type="text" class="form-control required"
                        > </textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                {% if evolutions %}
                    <h4>Evoluciones anteriores:</h4>
                {% endif %}
                    {% for ev in evolutions %}

                <div class="col-lg-10">
                    <div class="ibox">
                        <div class="ibox-title">
                            <h5>Fecha de la consulta: {{ ev.consulta.getDataDate() }} </h5>

                        </div>
                        <div class="ibox-content">
                         <textarea readonly="readonly"  rows="3" cols="5" type="text" class="form-control" >
